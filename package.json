{
	"name": "blog",
	"version": "1.5.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"dev:all": "npm-run-all --parallel dev:frontend dev:backend",
		"dev:frontend": "next dev",
		"dev:backend": "convex dev --tail-logs",
		"build": "next build",
		"start": "next start",
		"lint": "biome lint ./app --write",
		"format": "biome format ./app --write",
		"check": "biome check ./app --write",
		"type-check": "tsc --noEmit",
		"sync": "bun run scripts/sync-content.ts",
		"sync:prod": "SYNC_ENV=production VERBOSE=true bun run scripts/sync-content.ts",
		"deploy": "bun run sync && bun run build",
		"deploy:prod": "bunx convex deploy && bun run sync:prod"
	},
	"dependencies": {
		"@mdx-js/loader": "^3.1.1",
		"@mdx-js/react": "^3.1.1",
		"@next/mdx": "^16.1.6",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-label": "^2.1.8",
		"@radix-ui/react-popover": "^1.1.15",
		"@radix-ui/react-separator": "^1.1.8",
		"@radix-ui/react-slot": "^1.2.4",
		"@radix-ui/react-toggle": "^1.1.10",
		"@radix-ui/react-toggle-group": "^1.1.11",
		"@types/mdx": "^2.0.13",
		"@vercel/analytics": "^1.6.1",
		"@vercel/speed-insights": "^1.3.1",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"convex": "^1.32.0",
		"dotenv": "^16.6.1",
		"gray-matter": "^4.0.3",
		"lucide-react": "^0.511.0",
		"next": "^16.1.6",
		"next-mdx-remote": "^6.0.0",
		"next-themes": "^0.4.6",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.5.6",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"react-syntax-highlighter": "^15.6.6",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.5.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.4.4",
		"@tailwindcss/postcss": "^4.2.1",
		"@types/node": "^20.19.33",
		"@types/react": "^19.2.14",
		"@types/react-dom": "^19.2.3",
		"@types/react-syntax-highlighter": "^15.5.13",
		"tailwindcss": "^4.2.1",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3"
	}
